<meta charset="UTF-8">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>


<div class="container">
  <div class="row">
	<div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
	 
<% if @book.errors.any? %>
 <strong><%= @book.errors.count %>errors prohibited this obj from being saved:</strong>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  
<h1><strong>Editing Book</strong></h1>
 
<%= form_with model: @book,url: book_path(@book.id), method: :patch do |f|%>

<div class="mb-3">
	 <div class="form-group">
	  <label>Title</label>
	<tr><%= f.text_field :title, class: "col-12 book_title" %></tr>
	 </div>
	  </div>
<div class="mb-3">
	 <div class="form-group">
	 <label>Opinion</label>
	<tr><%= f.text_area :body, class: "col-12 book_body" %></tr>
	 </div>
 </div>
 
<div class="actions">
	<%= f.submit class: "btn btn-success" %>
</div>
<% end %>
<table>
 <th><%= link_to "Show", book_path %>
 |</th>
 <th><a href="/books">Back</a></th>
</table>
</div>
</div>
</div>