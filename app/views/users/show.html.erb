
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
 <div class="container  px-5 px-sm-0">
 <div class ="row">
 <div class="col-3">
  <%= flash[:notic] %>
  
<h1>User info</h1>
<%= render 'users/userprofile', user: @user%>


 <h3><strong>New book</strong></h3>
<%= render 'books/newbook', book: @book %>
</div>
<div class="col-md-8 offset-md-1">

<table class="table book-index">
 <thead>
<h2>Books</h2>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
   <th colspan="3"></th>
  </tr>
  <tr>
   <% @books.each do |book| %>
   <td><p><%= image_tag book.user.get_profile_image(80,80) %></p></td>
   <td><%=link_to book.title,book %></td>
   <td><%= book.body %></td>
  </tr>
  <% end %>
 </thead>
</table>
</div>
</div>
</div>
