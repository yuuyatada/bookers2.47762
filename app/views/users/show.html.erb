<meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    
 <div class="container">
 <div class ="row">
 
 <div class="col-md-4">
  <%= flash[:notic] %>
  
<h1>User info</h1>
<%= render 'users/userprofile', user: current_user %>


 <h3><strong>New book</strong></h3>
<%= render 'books/newbook', book: @book %>
</div>
<div class="col-md-8">
<table>
 <thead>
<h2>Books</h2>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
   <th colspan="3"></th>
  </tr>
  <tr>
   <% @books.each do |book| %>
   <th><p><%= image_tag book.user.get_profile_image(100,100) %></p></th>
   <th><%=link_to book.title,book %></th>
   <th><%= book.body %></th>
  </tr>
  <% end %>
 </thead>
</table>
</div>
</div>
</div>
